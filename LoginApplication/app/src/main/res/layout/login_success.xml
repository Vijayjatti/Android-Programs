<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello Vijay"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:paddingTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/textView3"
        android:layout_gravity="left" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="6"
        android:columnCount="3">

        <Button
            android:id="@+id/HappyButton"
            android:text=""
            android:background="@drawable/SmilingSmiley"
            android:layout_height="190dp"
            android:layout_width="190dp"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:id="@+id/SadButton"
            android:text=""
            android:background="@drawable/SadSmiley"
            android:layout_height="190dp"
            android:layout_width="190dp"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:id="@+id/AngryButton"
            android:text=""
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/AngrySmiley"
            android:layout_height="190dp"
            android:layout_width="190dp"/>
        <Button
            android:id="@+id/ConfusedButton"
            android:text=""
            android:layout_height="190dp"
            android:layout_width="190dp"
            android:background="@drawable/ConfusedSmiley"
            android:layout_row="1"
            android:layout_column="1" />
        <Button
            android:id="@+id/Evaluate"
            android:layout_gravity="fill_horizontal"
            android:text="Evaluate"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_height="80dp"/>
    </GridLayout>


</LinearLayout>