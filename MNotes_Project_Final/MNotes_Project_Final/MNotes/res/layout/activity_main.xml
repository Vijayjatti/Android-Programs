<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/android:button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/to_do_list"
        android:drawableLeft="@drawable/ic_action_name"
        android:onClick="todo"
        android:textAlignment="center"
        android:gravity="center" />

    <Button
        android:id="@+id/Pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/android:button1"
        android:layout_below="@+id/android:button1"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_action_pic"
        android:gravity="center"
        android:text="@string/picture_notes"
        android:textAlignment="center" />

    <Button
        android:id="@+id/android:button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Pictures"
        android:layout_below="@+id/Pictures"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_action_reminder"
        android:gravity="center"
        android:onClick="remind_me"
        android:text="@string/meeting_reminder"
        android:textAlignment="center" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/android:button2"
        android:layout_below="@+id/android:button2"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_whiteboard"
        android:gravity="center"
        android:onClick="whiteboard"
        android:text="@string/whiteboard"
        android:textAlignment="center" />
    
</RelativeLayout>
